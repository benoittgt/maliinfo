<%= form_for(@post) do |f| %>
	<%= f.label :title, "Titre" %>
	<br>
	<%= f.text_field(:title, size: 93) %>
	<br><br>
	<%= f.label :content, "Texte" %>
	<br>
	<%= f.text_area(:content, size: "67x20") %>
	<br><br>
	<%= f.hidden_field(:picture_cache) %>
    <%= f.file_field(:picture) %>
	<br><br>
    <%= f.label :category, "Category" %>
	<br>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
    <br><br>
    <%= f.label :tag_list, "Tags" %>
	<br>
    <%= f.text_field(:tag_list, size: 93) %>
	<br><br>
	<%= f.submit %>
<% end %>