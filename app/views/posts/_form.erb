<%= form_for(@post) do |f| %>
	<%= f.label :title, "Titre" %>
	<br>
	<%= f.text_field(:title, size: 20) %>
	<br><br>
	<%= f.label :content, "Texte" %>
	<br>
	<%= f.text_area(:content) %>
	<br><br>
	<%= f.hidden_field(:picture_cache) %>
    <%= f.file_field(:picture) %>
	<br><br>
    <%= f.label :tag, "Tag" %>
	<br>
    <%= f.text_field(:tag, size: 20) %>
	<br><br>
	<%= f.submit %>
<% end %>