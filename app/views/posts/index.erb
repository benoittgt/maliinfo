<section class="container menu_tag">
	<div class="tag_intro">
		<p>En ce moment...</p>
	</div>
</section>


<section id="zone_carrousel">
	<div id="container_carrousel" class="shadow">
		<ul class="carrousel">
			<% @slides.each do |post| %>
				<li>
					<%= link_to cl_image_tag(post.picture_url(:standard), :width => 630, :height => 420, :crop => :fill), post_path(post) %>
				</li>
			<% end %>
		</ul>
	</div>
</section>

<section class="bloc_article">

<ul>
<% @posts.each do |post| %>
	<li>
		<div class="article">
			<div class="article_title">
				<%= link_to post.title, post_path(post) %>
				<br><br>
			</div>

			<div class="article_picture">
				<%= link_to cl_image_tag(post.picture_url(:thumbnail), :width => 300, :height => 200, :crop => :fill), post_path(post) %>
			</div>

			<div class="article_description">
				<div class="article_summary">
					<%= link_to sanitize(post.content.truncate(350, separator: ' ')), post_path(post) %>
				</div>
				<div class="read_more">
					<%= link_to 'lire la suite...', post_path(post) %>
				</div>
			</div>
		</div>
	</li>
<% end %>
</ul>

<div class="create_post_button">
<%= link_to "create post", new_post_path %>
</div>

</section>
