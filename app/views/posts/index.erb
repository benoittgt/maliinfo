<section class="container menu_tag">
	<div class="tag_intro">
		<p>En ce moment...</p>
	</div>
</section>


<section class="">
	<div id="carrousel" class="shadow">
		<img class='opaque' src="/abdoulaye_diop.png" />
		<img src="/moussa_mara.jpg" />
		<img src="/ibk.jpg" />
		<img src="/blaise_comparoe.jpg" />
	</div>
	<p id="carrousel_controls">
		<span class="selected">◦</span>
		<span>◦</span>
		<span>◦</span>
		<span>◦</span>
	</p>
</section>

<section class="bloc_article">

<ul>
<% @posts.each do |post| %>
	<li>
		<div class="article">
			<div class="article_title">
				<%= link_to post.title, post_path(post) %>
				<br><br>
			</div>

			<div class="article_picture">
				<%= link_to cl_image_tag(post.picture_url(:thumbnail), :width => 300, :height => 200, :crop => :fill), post_path(post) %>
			</div>

			<div class="article_description">
				<div class="article_summary">
					<%= link_to post.content.split[0..60].join(" "), post_path(post) %>...
				</div>
				<div class="read_more">
					<%= link_to 'lire la suite...', post_path(post) %>
				</div>
			</div>
		</div>
	</li>
<% end %>
</ul>

<div class="create_post_button">
<%= link_to "create post", new_post_path %>
</div>

</section>
